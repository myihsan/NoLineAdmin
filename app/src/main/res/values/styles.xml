<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="HeaderBar">
        <item name="android:background">@color/primary</item>
    </style>

    <style name="ActionBarThemeOverlay" parent="">
        <item name="android:textColorPrimary">@color/icons</item>
        <item name="colorControlNormal">@color/icons</item>
        <item name="colorControlHighlight">#3fff</item>
    </style>

    <style name="ActionBarPopupThemeOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ActionBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/icons</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="LeftButtonStyle">
        <item name="android:textColor">#3C3C3C</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="RightButtonStyle" parent="@style/LeftButtonStyle">
        <item name="android:textColor">@color/accent</item>
    </style>

</resources>
